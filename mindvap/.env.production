# Production Environment Configuration for MindVap
# This file contains production settings for the MindVap application

# ===============================
# Supabase Configuration
# ===============================
VITE_SUPABASE_URL=https://your-production-supabase-url.supabase.co
VITE_SUPABASE_ANON_KEY=your-production-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-production-supabase-service-role-key

# ===============================
# EmailJS Configuration (Production)
# ===============================
# IMPORTANT: Replace these with your actual EmailJS production credentials
VITE_EMAILJS_PUBLIC_KEY=your_production_emailjs_public_key
VITE_EMAILJS_SERVICE_ID=service_mindvap_production
EMAILJS_TEMPLATE_CONTACT=template_contact_prod

# Email Template IDs (Production)
EMAILJS_TEMPLATE_WELCOME=template_welcome_prod
EMAILJS_TEMPLATE_EMAIL_VERIFICATION=template_email_verification_prod
EMAILJS_TEMPLATE_PASSWORD_RESET=template_password_reset_prod
EMAILJS_TEMPLATE_PASSWORD_CHANGED=template_password_changed_prod
EMAILJS_TEMPLATE_ORDER_CONFIRMATION=template_order_confirmation_prod
EMAILJS_TEMPLATE_ORDER_SHIPPED=template_order_shipped_prod
EMAILJS_TEMPLATE_LOGIN_ALERT=template_login_alert_prod
EMAILJS_TEMPLATE_GDPR_CONSENT=template_gdpr_consent_prod

# Email Settings
EMAIL_FROM_NAME=MindVap
EMAIL_FROM_ADDRESS=noreply@mindvap.com
SUPPORT_EMAIL=support@mindvap.com
SUPPORT_PHONE=1-800-MINDVAP

# ===============================
# Application Configuration
# ===============================
VITE_APP_URL=https://your-production-domain.com
NODE_ENV=production
APP_NAME=MindVap
APP_VERSION=1.0.0

# ===============================
# Security Configuration
# ===============================
# Generate strong secrets: openssl rand -base64 32
JWT_ACCESS_SECRET=your_production_access_secret_key
JWT_REFRESH_SECRET=your_production_refresh_secret_key

# Token expiration times
JWT_ACCESS_EXPIRY=900          # 15 minutes in seconds
JWT_REFRESH_EXPIRY=604800      # 7 days in seconds

# Encryption key for sensitive data
ENCRYPTION_KEY=your_production_encryption_key_32_chars

# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000    # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100    # Max requests per window
LOGIN_RATE_LIMIT_ATTEMPTS=5    # Max login attempts before lockout
LOGIN_RATE_LIMIT_WINDOW=900000 # 15 minutes in milliseconds

# Account lockout configuration
ACCOUNT_LOCKOUT_DURATION=1800000 # 30 minutes in milliseconds
MAX_FAILED_LOGIN_ATTEMPTS=5

# ===============================
# Age Verification
# ===============================
MIN_AGE_REQUIRED=21
AGE_VERIFICATION_METHOD=self_attestation_plus_payment

# ===============================
# Session Configuration
# ===============================
SESSION_TIMEOUT=900000         # 15 minutes in milliseconds
SESSION_REFRESH_THRESHOLD=300000 # 5 minutes in milliseconds
MAX_ACTIVE_SESSIONS=5

# ===============================
# Database Configuration
# ===============================
DATABASE_URL=postgresql://user:password@host:port/database
REDIS_URL=redis://localhost:6379

# ===============================
# Logging Configuration
# ===============================
LOG_LEVEL=warn
LOG_FILE_PATH=./logs
ENABLE_SECURITY_LOGGING=true

# ===============================
# GDPR Compliance
# ===============================
DATA_RETENTION_DAYS=2555       # 7 years in days
GDPR_DELETION_GRACE_PERIOD=30  # Days before deletion after request

# ===============================
# Feature Flags (Production)
# ===============================
ENABLE_AGE_VERIFICATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR_AUTH=false   # For future implementation
ENABLE_SOCIAL_LOGIN=false      # For future implementation

# ===============================
# Email Configuration (Production)
# ===============================
# Enable real email sending in production
ENABLE_REAL_EMAIL_SENDING=true
EMAIL_SIMULATION_MODE=false

# Email rate limiting
EMAIL_RATE_LIMIT_PER_HOUR=100
EMAIL_BURST_LIMIT=10

# ===============================
# Analytics & Monitoring
# ===============================
ENABLE_ANALYTICS=true
ANALYTICS_TRACKING_ID=your_analytics_id
ENABLE_ERROR_REPORTING=true
ERROR_REPORTING_DSN=your_error_reporting_dsn